{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Commands Projects",
  "description": "Schema for tracking projects that have Claude commands installed",
  "type": "object",
  "patternProperties": {
    "^[^/\\\\]+$": {
      "type": "string",
      "description": "Absolute path to project directory",
      "pattern": "^/"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "my-project": "/Users/username/projects/my-project",
      "another-app": "/Users/username/code/another-app"
    }
  ]
}
